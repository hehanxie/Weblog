<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping package="com.Nil.Database">

<!-- class name with java class name, table with the name of table in sql -->  
  <class name="Words" table="words">
  	<id name="num" type="int" column="num">  
        <generator class="native"></generator>  
     </id>  
     <property name="authorName" column="authorName"></property>  
     <property name="content" column="content"></property>
     <property name="liker" column="liker"></property>    
  </class>  
  
</hibernate-mapping>